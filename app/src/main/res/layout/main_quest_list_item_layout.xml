<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/shade3"
    >

    <ProgressBar
        android:id="@+id/mainQuestPb"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="260dp"
        android:layout_height="28dp"
        android:layout_marginTop="8dp"
        android:outlineAmbientShadowColor="@color/silver"
        app:layout_constraintEnd_toEndOf="@+id/mainQuestPurposeTv"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="@+id/mainQuestPurposeTv"
        app:layout_constraintTop_toBottomOf="@+id/mainQuestProgressTv" />

    <TextView
        android:id="@+id/mainQuestPurposeTv"
        android:layout_width="305dp"
        android:layout_height="32dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="32dp"
        android:text="mainQuestPurpose"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/shade2"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mainQuestProgressTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:padding="5dp"
        android:text="TextView"
        android:textColor="@color/shade4"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="@+id/mainQuestPb"
        app:layout_constraintStart_toStartOf="@+id/mainQuestPb"
        app:layout_constraintTop_toBottomOf="@+id/mainQuestPurposeTv" />
</android.support.constraint.ConstraintLayout>